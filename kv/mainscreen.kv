<MainScreen>:
    name: 'mainscreen'
    GridLayout:
        cols: 2
        FloatLayout:
            Image:
                size_hint: (0.7, 0.4)
                pos_hint: {'x':0, 'y':.6}
                source: 'misc/mir-200.png'
            Label:
                text_size: self.size
                text: 'MiR Sniffer'
                font_size: 80
                pos: (0, 30)
            Label:
                text_size: self.size
                text: ' Igor Czyrski \n github.com/czyrski'
                font_size: 20
                pos_hint: {'x':0, 'y':0}
        StackLayout:
            orientation: 'bt-rl'
            Button:
                id: mir327
                halign: 'left'
                valign: 'middle'
                font_size: 20
                text_size: self.size
                text: ' MiR_S327\n'+' State: '+root.status_robots[5]
                color: root.buttons_color[5]
                size_hint: (0.6, 0.10)
                on_release: app.root.current = 'mir327'
            Button:
                id: mir326
                halign: 'left'
                valign: 'middle'
                font_size: 20
                text_size: self.size
